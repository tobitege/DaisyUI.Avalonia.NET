<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Flowery.Controls;assembly=Flowery.NET">

    <Design.PreviewWith>
        <Border Padding="20">
             <controls:DaisyBreadcrumbs>
                 <TextBlock Text="Home" />
                 <TextBlock Text="Documents" />
                 <TextBlock Text="Add Document" />
             </controls:DaisyBreadcrumbs>
        </Border>
    </Design.PreviewWith>

    <!-- Item theme for DaisyBreadcrumbs -->
    <ControlTheme x:Key="DaisyBreadcrumbItemTheme" TargetType="controls:DaisyBreadcrumbItem">
        <Setter Property="Template">
            <ControlTemplate>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Separator -->
                    <TextBlock Text="/"
                               Margin="8,0"
                               Opacity="0.5"
                               FontSize="14"
                               IsVisible="True"
                               Name="PART_Separator"/>
                    <ContentPresenter Content="{TemplateBinding Content}"
                                      ContentTemplate="{TemplateBinding ContentTemplate}"
                                      VerticalAlignment="Center"/>
                </StackPanel>
            </ControlTemplate>
        </Setter>

        <!-- Hide separator for the first item -->
        <Style Selector="^:nth-child(1) /template/ TextBlock#PART_Separator">
            <Setter Property="IsVisible" Value="False" />
            <Setter Property="Margin" Value="0" />
        </Style>
    </ControlTheme>

    <ControlTheme x:Key="{x:Type controls:DaisyBreadcrumbs}" TargetType="controls:DaisyBreadcrumbs">
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemContainerTheme" Value="{StaticResource DaisyBreadcrumbItemTheme}" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        Padding="{TemplateBinding Padding}">
                    <ItemsPresenter ItemsPanel="{TemplateBinding ItemsPanel}" />
                </Border>
            </ControlTemplate>
        </Setter>
    </ControlTheme>
</ResourceDictionary>

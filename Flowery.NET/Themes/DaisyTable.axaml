<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Flowery.Controls;assembly=Flowery.NET">

    <Design.PreviewWith>
        <Border Padding="20">
             <controls:DaisyTable>
                 <Grid ColumnDefinitions="*, *">
                     <TextBlock Text="Row 1 Col 1" />
                     <TextBlock Text="Row 1 Col 2" />
                 </Grid>
                 <Grid ColumnDefinitions="*, *">
                     <TextBlock Text="Row 2 Col 1" />
                     <TextBlock Text="Row 2 Col 2" />
                 </Grid>
             </controls:DaisyTable>
        </Border>
    </Design.PreviewWith>

    <ControlTheme x:Key="{x:Type controls:DaisyTable}" TargetType="controls:DaisyTable">
        <Setter Property="Background" Value="{DynamicResource DaisyBase100Brush}" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="BorderBrush" Value="{DynamicResource DaisyBase200Brush}" />
        <Setter Property="BorderThickness" Value="1" />

        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <StackPanel />
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <!-- Row styling via ItemTemplate wrapping content in a Border -->
        <Setter Property="ItemTemplate">
            <DataTemplate>
                <Border Padding="16,12"
                        BorderBrush="{DynamicResource DaisyBase200Brush}"
                        BorderThickness="0,0,0,1">
                    <ContentPresenter Content="{Binding}" />
                </Border>
            </DataTemplate>
        </Setter>
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        ClipToBounds="True">
                    <ItemsPresenter ItemsPanel="{TemplateBinding ItemsPanel}" />
                </Border>
            </ControlTemplate>
        </Setter>
    </ControlTheme>
</ResourceDictionary>

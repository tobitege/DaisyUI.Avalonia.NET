<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Flowery.Controls;assembly=Flowery.NET">

    <Design.PreviewWith>
        <Border Padding="20" Background="{DynamicResource DaisyBase200Brush}">
            <StackPanel Spacing="20">
                <!-- Radio Mode -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Radio Mode:" FontWeight="Bold" />
                    <controls:DaisyThemeRadio Content="Default" ThemeName="Light" GroupName="ThemeRadios" />
                    <controls:DaisyThemeRadio Content="Retro" ThemeName="Retro" GroupName="ThemeRadios" />
                    <controls:DaisyThemeRadio Content="Cyberpunk" ThemeName="Cyberpunk" GroupName="ThemeRadios" IsChecked="True" />
                </StackPanel>
                <!-- Button Mode -->
                <StackPanel Spacing="0">
                    <TextBlock Text="Button Mode:" FontWeight="Bold" Margin="0,0,0,8" />
                    <controls:DaisyJoin Orientation="Vertical">
                        <controls:DaisyThemeRadio Content="Default" ThemeName="Light" Mode="Button" GroupName="ThemeButtons" />
                        <controls:DaisyThemeRadio Content="Retro" ThemeName="Retro" Mode="Button" GroupName="ThemeButtons" />
                        <controls:DaisyThemeRadio Content="Cyberpunk" ThemeName="Cyberpunk" Mode="Button" GroupName="ThemeButtons" IsChecked="True" />
                    </controls:DaisyJoin>
                </StackPanel>
            </StackPanel>
        </Border>
    </Design.PreviewWith>

    <ControlTheme x:Key="{x:Type controls:DaisyThemeRadio}" TargetType="controls:DaisyThemeRadio">
        <Setter Property="Padding" Value="8,0,0,0" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <ControlTemplate>
                <Grid ColumnDefinitions="Auto,*">
                    <Border x:Name="PART_Border"
                            Grid.Column="0"
                            Width="20" Height="20"
                            CornerRadius="10"
                            BorderThickness="1"
                            BorderBrush="{DynamicResource DaisyBaseContentBrush}"
                            Background="{DynamicResource DaisyBase100Brush}">
                        <Ellipse x:Name="CheckMark"
                                 Width="12" Height="12"
                                 Fill="{DynamicResource DaisyBase100Brush}"
                                 IsVisible="False" />
                    </Border>
                    <ContentPresenter Grid.Column="1"
                                      Content="{TemplateBinding Content}"
                                      ContentTemplate="{TemplateBinding ContentTemplate}"
                                      Margin="{TemplateBinding Padding}"
                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                </Grid>
            </ControlTemplate>
        </Setter>

        <!-- Checked State (Radio Mode) -->
        <Style Selector="^:checked /template/ Ellipse#CheckMark">
            <Setter Property="IsVisible" Value="True" />
        </Style>
        <Style Selector="^:checked /template/ Border#PART_Border">
            <Setter Property="Background" Value="{DynamicResource DaisyBaseContentBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource DaisyBaseContentBrush}" />
        </Style>

        <!-- Hover State (Radio Mode) -->
        <Style Selector="^:pointerover /template/ Border#PART_Border">
            <Setter Property="BorderBrush" Value="{DynamicResource DaisyPrimaryBrush}" />
        </Style>

        <!-- Sizes (Radio Mode) -->
        <Style Selector="^[Size=Small] /template/ Border#PART_Border">
            <Setter Property="Width" Value="16" />
            <Setter Property="Height" Value="16" />
            <Setter Property="CornerRadius" Value="8" />
        </Style>
        <Style Selector="^[Size=Small] /template/ Ellipse#CheckMark">
            <Setter Property="Width" Value="10" />
            <Setter Property="Height" Value="10" />
        </Style>

        <!-- ========== Button Mode ========== -->
        <Style Selector="^[Mode=Button]">
            <Setter Property="Padding" Value="16,10" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="Background" Value="{DynamicResource DaisyBase200Brush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource DaisyBase300Brush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Template">
                <ControlTemplate>
                    <Border x:Name="PART_ButtonBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter Content="{TemplateBinding Content}"
                                          ContentTemplate="{TemplateBinding ContentTemplate}"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                    </Border>
                </ControlTemplate>
            </Setter>
        </Style>

        <!-- Button Mode: Hover -->
        <Style Selector="^[Mode=Button]:pointerover /template/ Border#PART_ButtonBorder">
            <Setter Property="Background" Value="{DynamicResource DaisyBase300Brush}" />
        </Style>

        <!-- Button Mode: Checked (accent highlight) -->
        <Style Selector="^[Mode=Button]:checked">
            <Setter Property="Background" Value="{DynamicResource DaisyPrimaryBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource DaisyPrimaryContentBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource DaisyPrimaryBrush}" />
        </Style>
        <Style Selector="^[Mode=Button]:checked /template/ Border#PART_ButtonBorder">
            <Setter Property="Background" Value="{DynamicResource DaisyPrimaryBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource DaisyPrimaryBrush}" />
        </Style>

        <!-- Button Mode: Sizes -->
        <Style Selector="^[Mode=Button][Size=Small]">
            <Setter Property="Padding" Value="12,6" />
            <Setter Property="FontSize" Value="12" />
        </Style>
        <Style Selector="^[Mode=Button][Size=Large]">
            <Setter Property="Padding" Value="20,14" />
            <Setter Property="FontSize" Value="16" />
        </Style>
    </ControlTheme>
</ResourceDictionary>

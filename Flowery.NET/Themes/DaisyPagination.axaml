<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Flowery.Controls;assembly=Flowery.NET">

    <Design.PreviewWith>
        <Border Padding="20">
             <controls:DaisyPagination>
                 <ListBoxItem>1</ListBoxItem>
                 <ListBoxItem IsSelected="True">2</ListBoxItem>
                 <ListBoxItem>3</ListBoxItem>
                 <ListBoxItem>4</ListBoxItem>
             </controls:DaisyPagination>
        </Border>
    </Design.PreviewWith>

    <!-- Item theme for DaisyPagination -->
    <ControlTheme x:Key="DaisyPaginationItemTheme" TargetType="ListBoxItem">
        <Setter Property="Background" Value="{DynamicResource DaisyBase100Brush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource DaisyBase300Brush}" />
        <Setter Property="Foreground" Value="{DynamicResource DaisyBaseContentBrush}" />
        <Setter Property="BorderThickness" Value="1,1,0,1" />
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        Padding="{TemplateBinding Padding}">
                    <ContentPresenter Content="{TemplateBinding Content}"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                </Border>
            </ControlTemplate>
        </Setter>

        <!-- Last item border fix -->
        <Style Selector="^:nth-last-child(1)">
            <Setter Property="BorderThickness" Value="1" />
        </Style>

        <!-- First item radius -->
        <Style Selector="^:nth-child(1)">
            <Setter Property="CornerRadius" Value="8,0,0,8" />
        </Style>
        <!-- Last item radius -->
        <Style Selector="^:nth-last-child(1)">
            <Setter Property="CornerRadius" Value="0,8,8,0" />
        </Style>

        <!-- Selected State -->
        <Style Selector="^:selected">
            <Setter Property="Background" Value="{DynamicResource DaisyNeutralBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource DaisyNeutralContentColor}" />
            <Setter Property="BorderBrush" Value="{DynamicResource DaisyNeutralBrush}" />
        </Style>

        <!-- Hover State -->
        <Style Selector="^:pointerover">
            <Setter Property="Background" Value="{DynamicResource DaisyBase200Brush}" />
        </Style>
        <Style Selector="^:selected:pointerover">
            <Setter Property="Background" Value="{DynamicResource DaisyNeutralFocusBrush}" />
        </Style>
    </ControlTheme>

    <ControlTheme x:Key="{x:Type controls:DaisyPagination}" TargetType="controls:DaisyPagination">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemContainerTheme" Value="{StaticResource DaisyPaginationItemTheme}" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}">
                    <ItemsPresenter ItemsPanel="{TemplateBinding ItemsPanel}" />
                </Border>
            </ControlTemplate>
        </Setter>
    </ControlTheme>
</ResourceDictionary>

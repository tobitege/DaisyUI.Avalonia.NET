<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Flowery.Controls;assembly=Flowery.NET">

    <Design.PreviewWith>
        <Border Padding="20" Background="#1d232a">
             <StackPanel Spacing="20">
                 <TextBlock Text="Bordered (default)" Foreground="White"/>
                 <controls:DaisyTabs>
                     <TabItem Header="Tab 1"><TextBlock Text="Content 1" Margin="8"/></TabItem>
                     <TabItem Header="Tab 2"><TextBlock Text="Content 2" Margin="8"/></TabItem>
                 </controls:DaisyTabs>
                 <TextBlock Text="Boxed" Foreground="White"/>
                 <controls:DaisyTabs Variant="Boxed">
                     <TabItem Header="Tab 1"><TextBlock Text="Content 1" Margin="8"/></TabItem>
                     <TabItem Header="Tab 2"><TextBlock Text="Content 2" Margin="8"/></TabItem>
                 </controls:DaisyTabs>
                 <TextBlock Text="Lifted" Foreground="White"/>
                 <controls:DaisyTabs Variant="Lifted">
                     <TabItem Header="Tab 1"><TextBlock Text="Content 1" Margin="8"/></TabItem>
                     <TabItem Header="Tab 2"><TextBlock Text="Content 2" Margin="8"/></TabItem>
                 </controls:DaisyTabs>
             </StackPanel>
        </Border>
    </Design.PreviewWith>

    <Styles.Resources>
        <ResourceDictionary>
            <ControlTheme x:Key="{x:Type controls:DaisyTabs}" TargetType="controls:DaisyTabs">
                <Setter Property="Margin" Value="0" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="Template">
                    <ControlTemplate>
                        <DockPanel>
                            <Border Name="PART_HeaderContainer" DockPanel.Dock="Top">
                                <ItemsPresenter Name="PART_ItemsPresenter"
                                                ItemsPanel="{TemplateBinding ItemsPanel}" />
                            </Border>
                            <ContentPresenter Name="PART_SelectedContentHost"
                                              Margin="{TemplateBinding Padding}"
                                              Content="{TemplateBinding SelectedContent}"
                                              ContentTemplate="{TemplateBinding SelectedContentTemplate}" />
                        </DockPanel>
                    </ControlTemplate>
                </Setter>
                <Setter Property="ItemsPanel">
                    <Setter.Value>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </Setter.Value>
                </Setter>

                <!-- Boxed header container styling -->
                <Style Selector="^[Variant=Boxed] /template/ Border#PART_HeaderContainer">
                    <Setter Property="Background" Value="{DynamicResource DaisyBase200Brush}" />
                    <Setter Property="CornerRadius" Value="8" />
                    <Setter Property="Margin" Value="0,0,0,8" />
                    <Setter Property="Padding" Value="4" />
                    <Setter Property="HorizontalAlignment" Value="Left" />
                </Style>
            </ControlTheme>
        </ResourceDictionary>
    </Styles.Resources>

    <!-- ==================== BASE TABITEM STYLING ==================== -->
    <Style Selector="controls|DaisyTabs TabItem">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource DaisyBaseContentBrush}" />
        <Setter Property="Opacity" Value="0.6" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border Name="PART_LayoutRoot"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        Padding="{TemplateBinding Padding}">
                    <ContentPresenter Name="PART_ContentPresenter"
                                      Content="{TemplateBinding Header}"
                                      ContentTemplate="{TemplateBinding HeaderTemplate}"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center" />
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
    <Style Selector="controls|DaisyTabs TabItem:pointerover">
        <Setter Property="Opacity" Value="1" />
    </Style>
    <Style Selector="controls|DaisyTabs TabItem:selected">
        <Setter Property="Opacity" Value="1" />
    </Style>

    <!-- ==================== NONE VARIANT (Plain) ==================== -->
    <!-- Just text, selected one is bolder - transparent border to prevent layout shift -->
    <Style Selector="controls|DaisyTabs[Variant=None] TabItem">
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="CornerRadius" Value="0" />
    </Style>
    <Style Selector="controls|DaisyTabs[Variant=None] TabItem:pointerover">
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="BorderBrush" Value="Transparent" />
    </Style>
    <Style Selector="controls|DaisyTabs[Variant=None] TabItem:selected">
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="BorderBrush" Value="Transparent" />
    </Style>
    <Style Selector="controls|DaisyTabs[Variant=None] TabItem:selected:pointerover">
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="BorderBrush" Value="Transparent" />
    </Style>

    <!-- ==================== BORDERED VARIANT ==================== -->
    <!-- Simple underline on selected, matching DaisyUI tabs-border -->
    <Style Selector="controls|DaisyTabs[Variant=Bordered] TabItem:pointerover /template/ Border#PART_LayoutRoot">
        <Setter Property="BorderBrush" Value="{DynamicResource DaisyBase300Brush}" />
        <Setter Property="BorderThickness" Value="0,0,0,2" />
    </Style>
    <Style Selector="controls|DaisyTabs[Variant=Bordered] TabItem:selected /template/ Border#PART_LayoutRoot">
        <Setter Property="BorderBrush" Value="{DynamicResource DaisyBaseContentBrush}" />
        <Setter Property="BorderThickness" Value="0,0,0,2" />
    </Style>

    <!-- ==================== BOXED VARIANT ==================== -->
    <!-- Rounded container with visible border on selected -->
    <Style Selector="controls|DaisyTabs[Variant=Boxed] TabItem /template/ Border#PART_LayoutRoot">
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="BorderBrush" Value="Transparent" />
    </Style>
    <Style Selector="controls|DaisyTabs[Variant=Boxed] TabItem:pointerover /template/ Border#PART_LayoutRoot">
        <Setter Property="BorderBrush" Value="{DynamicResource DaisyBaseContentBrush}" />
    </Style>
    <Style Selector="controls|DaisyTabs[Variant=Boxed] TabItem:selected /template/ Border#PART_LayoutRoot">
        <Setter Property="BorderBrush" Value="{DynamicResource DaisyPrimaryBrush}" />
        <Setter Property="Background" Value="Transparent" />
    </Style>
    <Style Selector="controls|DaisyTabs[Variant=Boxed] TabItem:selected">
        <Setter Property="FontWeight" Value="Medium" />
    </Style>
    <Style Selector="controls|DaisyTabs[Variant=Boxed] TabItem:selected:pointerover /template/ Border#PART_LayoutRoot">
        <Setter Property="BorderBrush" Value="{DynamicResource DaisyPrimaryBrush}" />
        <Setter Property="Background" Value="Transparent" />
    </Style>

    <!-- ==================== LIFTED VARIANT ==================== -->
    <!-- Folder-tab style: border on top/sides only, selected has background -->
    <Style Selector="controls|DaisyTabs[Variant=Lifted] TabItem /template/ Border#PART_LayoutRoot">
        <Setter Property="CornerRadius" Value="8,8,0,0" />
        <Setter Property="BorderThickness" Value="1,1,1,0" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="Margin" Value="0,0,-1,0" />
    </Style>
    <Style Selector="controls|DaisyTabs[Variant=Lifted] TabItem:pointerover /template/ Border#PART_LayoutRoot">
        <Setter Property="BorderBrush" Value="{DynamicResource DaisyBase300Brush}" />
        <Setter Property="Background" Value="{DynamicResource DaisyBase200Brush}" />
    </Style>
    <Style Selector="controls|DaisyTabs[Variant=Lifted] TabItem:selected /template/ Border#PART_LayoutRoot">
        <Setter Property="BorderBrush" Value="{DynamicResource DaisyBase300Brush}" />
        <Setter Property="Background" Value="{DynamicResource DaisyBase100Brush}" />
    </Style>
    <Style Selector="controls|DaisyTabs[Variant=Lifted] TabItem:selected">
        <Setter Property="FontWeight" Value="Medium" />
    </Style>
    <Style Selector="controls|DaisyTabs[Variant=Lifted] TabItem:selected:pointerover /template/ Border#PART_LayoutRoot">
        <Setter Property="BorderBrush" Value="{DynamicResource DaisyBase300Brush}" />
        <Setter Property="Background" Value="{DynamicResource DaisyBase100Brush}" />
    </Style>

    <!-- ==================== SIZES ==================== -->
    <Style Selector="controls|DaisyTabs[Size=Large] TabItem">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="Padding" Value="20,12" />
    </Style>
    <Style Selector="controls|DaisyTabs[Size=Small] TabItem">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Padding" Value="12,6" />
    </Style>
    <Style Selector="controls|DaisyTabs[Size=ExtraSmall] TabItem">
        <Setter Property="FontSize" Value="10" />
        <Setter Property="Padding" Value="8,4" />
    </Style>

    <!-- NONE VARIANT OVERRIDES - must be last to win specificity -->
    <Style Selector="controls|DaisyTabs[Variant=None] TabItem:selected /template/ Border#PART_LayoutRoot">
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="Background" Value="Transparent" />
    </Style>
    <Style Selector="controls|DaisyTabs[Variant=None] TabItem:selected:pointerover /template/ Border#PART_LayoutRoot">
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="Background" Value="Transparent" />
    </Style>

</Styles>

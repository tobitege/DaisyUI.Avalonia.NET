    <ControlTheme x:Key="{x:Type controls:DaisySwap}" TargetType="controls:DaisySwap">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Template">
            <ControlTemplate>
                <Grid Background="{TemplateBinding Background}">
                    <ContentPresenter Name="PART_OffContent"
                                      Content="{TemplateBinding OffContent}"
                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                      RenderTransformOrigin="0.5,0.5">
                        <ContentPresenter.Transitions>
                            <Transitions>
                                <DoubleTransition Property="Opacity" Duration="0:0:0.2" Easing="CubicEaseOut" />
                                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2" Easing="CubicEaseOut" />
                            </Transitions>
                        </ContentPresenter.Transitions>
                    </ContentPresenter>

                    <ContentPresenter Name="PART_OnContent"
                                      Content="{TemplateBinding OnContent}"
                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                      Opacity="0"
                                      RenderTransformOrigin="0.5,0.5">
                        <ContentPresenter.Transitions>
                            <Transitions>
                                <DoubleTransition Property="Opacity" Duration="0:0:0.2" Easing="CubicEaseOut" />
                                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2" Easing="CubicEaseOut" />
                            </Transitions>
                        </ContentPresenter.Transitions>
                    </ContentPresenter>

                    <ContentPresenter Name="PART_IndeterminateContent"
                                      Content="{TemplateBinding IndeterminateContent}"
                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                      Opacity="0"
                                      RenderTransformOrigin="0.5,0.5">
                        <ContentPresenter.Transitions>
                            <Transitions>
                                <DoubleTransition Property="Opacity" Duration="0:0:0.2" Easing="CubicEaseOut" />
                                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2" Easing="CubicEaseOut" />
                            </Transitions>
                        </ContentPresenter.Transitions>
                    </ContentPresenter>
                </Grid>
            </ControlTemplate>
        </Setter>

        <!-- Checked state: show OnContent, hide OffContent -->
        <Style Selector="^:checked /template/ ContentPresenter#PART_OffContent">
            <Setter Property="Opacity" Value="0" />
        </Style>
        <Style Selector="^:checked /template/ ContentPresenter#PART_OnContent">
            <Setter Property="Opacity" Value="1" />
        </Style>

        <!-- Indeterminate state: show IndeterminateContent, hide others -->
        <Style Selector="^:indeterminate /template/ ContentPresenter#PART_OffContent">
            <Setter Property="Opacity" Value="0" />
        </Style>
        <Style Selector="^:indeterminate /template/ ContentPresenter#PART_OnContent">
            <Setter Property="Opacity" Value="0" />
        </Style>
        <Style Selector="^:indeterminate /template/ ContentPresenter#PART_IndeterminateContent">
            <Setter Property="Opacity" Value="1" />
        </Style>

        <!-- Rotate effect -->
        <Style Selector="^[TransitionEffect=Rotate] /template/ ContentPresenter#PART_OnContent">
            <Setter Property="RenderTransform" Value="rotate(45deg)" />
        </Style>
        <Style Selector="^[TransitionEffect=Rotate]:checked /template/ ContentPresenter#PART_OnContent">
            <Setter Property="RenderTransform" Value="rotate(0deg)" />
        </Style>
        <Style Selector="^[TransitionEffect=Rotate]:checked /template/ ContentPresenter#PART_OffContent">
            <Setter Property="RenderTransform" Value="rotate(-45deg)" />
        </Style>

        <!-- Flip effect (horizontal scale flip since Avalonia doesn't support 3D rotateY) -->
        <Style Selector="^[TransitionEffect=Flip] /template/ ContentPresenter#PART_OnContent">
            <Setter Property="RenderTransform" Value="scaleX(0)" />
        </Style>
        <Style Selector="^[TransitionEffect=Flip]:checked /template/ ContentPresenter#PART_OnContent">
            <Setter Property="RenderTransform" Value="scaleX(1)" />
        </Style>
        <Style Selector="^[TransitionEffect=Flip]:checked /template/ ContentPresenter#PART_OffContent">
            <Setter Property="RenderTransform" Value="scaleX(0)" />
        </Style>

    </ControlTheme>
</ResourceDictionary>
